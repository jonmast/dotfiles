{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", ".git", "compile_commands.json"],
            "initializationOptions": {
                "highlight": { "lsRanges": true }
            }
        },
        "haskell": {
            "command": "hie-wrapper",
            "rootPatterns": [
                ".stack.yaml",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {
                }
            }
        },
        "elmLS": {
            "command": "elm-language-server",
            "filetypes": ["elm"],
            "rootPatterns": ["elm.json"]
        }
    },
    "solargraph.diagnostics": false,
    "suggest.enablePreview": true,
    "coc.source.ultisnips.priority": 1,
    "coc.preferences.formatOnSaveFiletypes": ["typescript", "rust", "elm", "c", "cpp", "html", "go"],
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "tslint.autoFixOnSave": true,
    "tsserver.formatOnType": false,
    "diagnostic-languageserver.filetypes": {
        "sh": "shellcheck",
        "erb": "erb",
        "ruby": "rubocop",
        "php": "phpcs"
    },
    "diagnostic-languageserver.linters": {
        "erb": {
            "sourceName": "erb",
            "command": "ruby -r erb -e 'puts ERB.new($stdin.read.gsub(%{<%=},%{<%}), nil, %{-}).src< %t | ruby -c"
        },
        "rubocop": {
            "command": "bundle",
            "rootPatterns": ["Gemfile"],
            "args": [
                "exec",
                "rubocop",
                "--format",
                "json",
                "--stdin",
                "%filepath"
            ],
            "sourceName": "rubocop",
            "parseJson": {
                "errorsRoot": "files[0].offenses",
                "line": "location.line",
                "column": "location.column",
                "message": "${message}",
                "security": "severity"
            },
            "securities": {
                "error": "error",
                "fatal": "error",
                "convention": "info",
                "warning": "warning",
                "refactor": "hint"
            }
        },
        "phpcs": {
            "command": "phpcs",
            "debounce": 100,
            "rootPatterns": [ "composer.json", "composer.lock", "vendor", ".git" ],
            "args": [ "--standard=PSR2", "--report=emacs", "-s", "-" ],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "phpcs",
            "formatLines": 1,
            "formatPattern": [
                "^.*:(\\d+):(\\d+):\\s+(.*)\\s+-\\s+(.*)(\\r|\\n)*$",
                {
                    "line": 1,
                    "column": 2,
                    "message": 4,
                    "security": 3
                }
            ],
            "securities": {
                "error": "error",
                "warning": "warning"
            }
        }
    },
    "git.semanticCommit.filetypes": [
        "gitcommit",
        "markdown"
    ],
    "python.jediEnabled": false,
    "rust-analyzer.checkOnSave.command": "clippy",
    "rust-analyzer.lens.run": false,
    "rust-analyzer.procMacro.enable": true,
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false,
    "diagnostic.enableSign": true,
    "codeLens.enable": true,
    "javascript.referencesCodeLens.enable": false,
    "typescript.referencesCodeLens.enable": false,
    "suggest.noselect": true,
    "yaml.completion": true,
    "yaml.schemaStore.enable": true,
    "yaml.schemas": {
        "https://kubernetesjsonschema.dev/v1.16.0/all.json": ["*-deployment.yaml", "k8s/*.yaml"]
    }
}
