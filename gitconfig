[user]
	email = jon@jonmast.com
	name = Jonathan Mast
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore_global
[alias]
	unstage = reset HEAD --
  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
  publish = push -u origin HEAD
  reup = reset --hard @{upstream}
[blame]
	date = relative
[init]
	templatedir = /home/jon/.git_template
[merge]
	tool = nvim -d
[mergetool]
	keepBackup = false
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[diff]
	wsErrorHighlight = all
[log]
	date = local
[diff "image"]
	command = git-imgdiff
